{% load static %}
<!doctype html>
<html lang="el">
<head>
  <meta charset="utf-8">
  <title>{% block title %}YourSolon{% endblock %}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="{% static 'civil_app/main.css' %}">
  <script src="https://unpkg.com/htmx.org@2.0.2"></script>
</head>
<body>
  <div class="topbar">
    <div class="brand">
      <img src="{% static 'civil_app/logo.jpg' %}" alt="logo" class="logo">
      <span class="brand-name">YourSolon</span>
    </div>
    <nav class="nav">
      <a href="{% url 'civil_app:home' %}">Αρχική</a>
      <a href="{% url 'civil_app:civil_form' %}">Αστικά</a>
      <a href="{% url 'civil_app:civil_offsolon' %}">Αστικά(Εκτός Σόλων)</a>
      <a href="{% url 'civil_app:admin_cases' %}">Διοικητικά</a>
      <a href="{% url 'civil_app:calendar' %}">Ημερολόγιο</a>
      <a href="{% url 'civil_app:penal' %}">Πιν. Ποινικών</a>
      <a href="/accounts/logout/">Αποσύνδεση</a>
    </nav>
  </div>

  <div class="container">
    {% block content %}{% endblock %}
  </div>
</body>
</html>
